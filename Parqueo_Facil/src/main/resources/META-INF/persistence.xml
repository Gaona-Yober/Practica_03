<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="reservaPU" transaction-type="JTA">
        <jta-data-source>jdbc/reservasDS</jta-data-source>

        <class>unl.edu.poo.jakarta.modelo.Usuario</class>
        <class>unl.edu.poo.jakarta.modelo.Reserva</class>
        <class>unl.edu.poo.jakarta.modelo.Espacio</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>

            <property name="eclipselink.ddl-generation" value="none"/>
            <property name="eclipselink.logging.level" value="WARNING"/>
            <property name="eclipselink.register-mbean" value="false"/>

        </properties>
    </persistence-unit>
</persistence>
